# ⚠️ NEVER commit .env or .env.local files - they are gitignored for security
# Copy this file to .env.local and replace all placeholder values with secure secrets
# Use: openssl rand -base64 32  to generate secure random values

# Postgres / DB (for docker-compose and application)
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=aura
DATABASE_URL=postgresql://aura_user:CHANGE_ME_SECURE_PASSWORD_HERE@localhost:5432/aura

# SIWE / auth (generate with: openssl rand -base64 32)
NEXT_PUBLIC_APP_NAME=Aura-Sign-Demo
SESSION_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
IRON_SESSION_PASSWORD=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Storage (MinIO for local dev)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
# These match MINIO_ROOT_* for consistency
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=CHANGE_ME_SECURE_PASSWORD_HERE

# Worker / queue
REDIS_URL=redis://localhost:6379

# Optional (embeddings)
EMBEDDING_API=http://localhost:4001
