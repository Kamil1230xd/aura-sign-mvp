{
  "name": "aura-sign-mvp",
  "private": true,
  "description": "Aura-Sign MVP monorepo with SIWE authentication",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "demo": "pnpm --filter demo-site dev",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:unit": "pnpm -r --filter './packages/*' test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^4.0.15",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@8.15.0"
}